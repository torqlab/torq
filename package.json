{
  "name": "pace",
  "version": "1.3.0",
  "description": "Generates AI images based on Strava activity data.",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/mrbalov/pace#readme",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "test": "bun test ./packages",
    "lint": "eslint packages",
    "lint:fix": "eslint packages --fix",
    "validate-specs:ai": "bun run --filter @pace/specs-guardrails validate-specs:ai -- --rootDir $(pwd) --systemPrompt $(pwd)/prompts/validate-specs.system.md --userPrompt $(pwd)/prompts/validate-specs.user.md",
    "validate-specs:openspec": "bun run --filter @pace/specs-guardrails validate-specs:openspec -- --rootDir $(pwd)",
    "ui:dev": "bun run --filter @pace/ui dev",
    "server:dev": "bun run --filter @pace/server dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrbalov/pace.git"
  },
  "keywords": [
    "strava",
    "ai",
    "image-generation"
  ],
  "author": {
    "name": "Bohdan Balov",
    "email": "balovbohdan@gmail.com",
    "url": "https://balov.dev"
  },
  "bugs": {
    "url": "https://github.com/mrbalov/pace/issues"
  },
  "engines": {
    "node": "24.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@fission-ai/openspec": "^0.20.0",
    "@types/bun": "^1.3.7",
    "bun": "^1.3.6",
    "eslint": "^9.15.0",
    "eslint-plugin-jsdoc": "^48.10.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.15.0"
  },
  "dependencies": {},
  "peerDependencies": {}
}
